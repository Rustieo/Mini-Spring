<?xml version="1.0" encoding="UTF-8"?>
<mapper namespace="com.minis.test.mapper.UserMapper">
    <select id="getUserInfo" parameterType="java.lang.Integer" resultType="com.minis.test.entity.User">
        select *
        from users
        where id=?
    </select>
    <!-- Pagination query: order by id, limit and offset provided as parameters: size, offset -->
    <select id="listPage" resultType="com.minis.test.entity.User">
        select id, age, birthday
        from users
        order by id
        limit ? offset ?
    </select>
    <!-- Total count for users table -->
    <select id="countAll" resultType="java.lang.Integer">
        select count(*) as cnt
        from users
    </select>
</mapper>